//Box.java
public class Box {
    int length;
    int weight;
    int height;
    void area(int length,int weight){
        System.out.println(length*weight);
    }
    void area(int length,int weight,int height){
        System.out.println(length*weight*height);
    }
}
class Main{
    public static void main(String[] args) {
        Box b1 = new Box();
        b1.area(12,6);
        b1.area(20,15,10);
    }
}



//Static_method.java
public class Static_method {
    static void method1(){
        System.out.println("static method");
    }
    void method2(){
        System.out.println("non static method");
    }
}
class Main1{
    public static void main(String[] args) {
        Static_method.method1();
        Static_method s1 = new Static_method();
        s1.method2();
    }
}



//sum.java
public class Sum {
    int calculate(int n){
        int sum = 0;
        for(int i=0;i<=n;i++){
            sum +=i;
        }
        return sum;
    }
}
class Main2{
    public static void main(String[] args) {
        Sum s = new Sum();
        System.out.println(s.calculate(10));
    }
}
